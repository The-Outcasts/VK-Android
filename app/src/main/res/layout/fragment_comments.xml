<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.eventpublication.fragment.CommentsFragment">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_comment_section"></androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
                android:id="@+id/ll_comment_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true">

            <EditText
                    android:layout_margin="10dp"
                    android:id="@+id/et_comment"
                    android:hint="Что вы об этом думаете?"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content" />

            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            <ImageButton
                    android:id="@+id/btn_post_comment"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="centerInside"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/icon_send_message_80"
                    android:background="@color/white"/>
        </LinearLayout>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


